pkgname=dnsproxy
pkgver=0.11.2
pkgrel=1
pkgdesc="Simple DNS proxy with DoH, DoT, and DNSCrypt support"
arch=('x86_64')
url="https://github.com/AdguardTeam/dnsproxy"
license=('GPL')
source=("https://github.com/AdguardTeam/dnsproxy/releases/download/v0.11.2/dnsproxy-linux-amd64-v${pkgver}.tar.gz")
md5sums=("SKIP")

package() {
    install -Dm755 $srcdir/linux-amd64/dnsproxy $pkgdir/usr/bin/dnsproxy
}
